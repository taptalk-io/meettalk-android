<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_notification_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MeetTalkIncomingCallActivity">

    <TextView
        android:id="@+id/tv_notification_title"
        style="@style/meetTalkIncomingCallNotificationTitleLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        tools:text="Caller Name" />

    <TextView
        android:id="@+id/tv_notification_content"
        style="@style/meetTalkIncomingCallNotificationContentLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        tools:text="Incoming Call - TapTalk" />

    <ImageView
        android:id="@+id/iv_button_reject_call"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tap_bg_circle_9b9b9b"
        android:backgroundTint="@color/tapButtonDestructiveBackgroundColor"
        android:padding="12dp"
        android:src="@drawable/meettalk_ic_hang_up_white"
        android:tint="@color/tapWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_button_answer_call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/tapWhite"
        tools:ignore="UseAppTint" />

    <ImageView
        android:id="@+id/iv_button_answer_call"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:background="@drawable/tap_bg_circle_9b9b9b"
        android:backgroundTint="@color/tapColorSuccess"
        android:padding="12dp"
        android:src="@drawable/meettalk_ic_answer_call_white"
        android:tint="@color/tapWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_button_reject_call"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/tapWhite"
        tools:ignore="UseAppTint" />

</FrameLayout>
