<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Call Message Bubble-->

    <style name="meetTalkRightCallBubbleMessageBodyStyle" parent="tapFontFamilyBold">
        <item name="android:textColor">@color/meetTalkRightCallBubbleMessageBodyColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="meetTalkLeftCallBubbleMessageBodyStyle" parent="tapFontFamilyBold">
        <item name="android:textColor">@color/meetTalkLeftCallBubbleMessageBodyColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="meetTalkRightCallBubbleTimestampDurationStyle" parent="tapFontFamilyRegular">
        <item name="android:textColor">@color/meetTalkRightCallBubbleTimestampDurationColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="meetTalkLeftCallBubbleTimestampDurationStyle" parent="tapFontFamilyRegular">
        <item name="android:textColor">@color/meetTalkLeftCallBubbleTimestampDurationColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Call Screen-->

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:navigationBarColor">@color/tapTransparentWhite</item>
        <item name="android:statusBarColor">@color/tapTransparentWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/tapTransparentWhite</item>
    </style>

    <style name="meetTalkCallScreenTitleLabelStyle" parent="tapFontFamilyBold">
        <item name="android:textColor">@color/meetTalkCallScreenTitleLabelColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="meetTalkCallScreenDurationStatusLabelStyle" parent="tapFontFamilyRegular">
        <item name="android:textColor">@color/meetTalkCallScreenDurationStatusLabelColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Incoming Call-->

    <style name="meetTalkIncomingCallTitleLabelStyle" parent="tapFontFamilyBold">
        <item name="android:textColor">@color/meetTalkCallScreenTitleLabelColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="meetTalkIncomingCallContentLabelStyle" parent="tapFontFamilyRegular">
        <item name="android:textColor">@color/meetTalkIncomingCallContentLabelColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="meetTalkIncomingCallInitialLabelStyle" parent="tapFontFamilyMedium">
        <item name="android:textColor">@color/meetTalkIncomingCallInitialLabelColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="meetTalkIncomingCallNotificationTitleLabelStyle" parent="TextAppearance.Compat.Notification.Title" />

    <style name="meetTalkIncomingCallNotificationContentLabelStyle" parent="TextAppearance.Compat.Notification.Info" />

    <!--TapTalk-->

    <style name="tapChatRoomNameLabelStyle" parent="tapFontFamilyBold">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/tapChatRoomNameLabelColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tapChatRoomStatusLabelStyle" parent="tapFontFamilyRegular">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/tapChatRoomStatusLabelColor</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
